<!DOCTYPE html>
<html>
<head>
  <title>Doodles</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% @links = [] %>
  <% @links.push({ name: "Our Story", path: "/our-story" }) %>
  <% @links.push({ name: "Donate", path: "/donors" }) %>
  <% @links.push({ name: "Contact", path: "/contact" }) %>
  <% @links.push({ name: "Our Board", path: "/board" }) %>
  <% @links.push({ name: "Sign Up", path: "/users/sign_up" }) %>
</head>
<body>
  <div id="top-nav-bar" class="<%= yield(:nav_size_class) %>">
    <div id="top-nav-content">
      <%= image_tag 'logo-yellow-trans', class: 'logo', alt: 'Doodles Academy' %>
      <div class="nav-menu linear">
        <ul>
          <% @links.each do |link| %>
          <li><%= link_to link[:name], link[:path] %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="nav-menu hanging">
      <div class="hanging-menu-content">
        <ul>
          <% @links.each do |link| %>
          <li><%= link_to link[:name], link[:path] %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <%= yield %>

  <div id="footer">
    <div class="footer-top">
    </div>
    <div class="footer-bottom">
    </div>
  </div>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '', 'auto');
    ga('send', 'pageview');

  </script>
</body>
</html>
