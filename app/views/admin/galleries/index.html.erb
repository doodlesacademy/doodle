<%= render "shared/alert", alert: notice %>

<h1 class="inline">Galleries</h1>
<%= link_to 'New Gallery', new_admin_gallery_path, class: "btn btn-blue pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Lesson Level</th>
      <th>Lesson Name</th>
      <th># of Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.lesson.level.capitalize %></td>
        <td><%= gallery.lesson.title %></td>
        <td><%= gallery.assets.count %></td>
        <td><%= link_to 'Show', admin_gallery_path(gallery) %></td>
        <td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

