<%= render "shared/alert", alert: notice %>

<h1 class="inline">Galleries</h1>
<%= link_to 'New Gallery', new_admin_gallery_path, class: "btn btn-blue pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Project Level</th>
      <th># of Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= link_to 'Show', project_gallery_path(gallery.project.slug) %></td>
        <td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

