<%= render "shared/alert", alert: notice %>

<h1 class="inline">Supply Items</h1>
<%= link_to 'New Supply item', new_admin_supply_item_path, class: "btn btn-blue pull-right" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amazon ID</th>
      <th>Url</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @supply_items.each do |supply_item| %>
      <tr>
        <td><%= supply_item.name %></td>
        <td><%= supply_item.asin %></td>
        <td><%= supply_item.url if supply_item.has_link? %></td>
        <td><%= link_to 'Show', admin_supply_item_path(supply_item) %></td>
        <td><%= link_to 'Edit', edit_admin_supply_item_path(supply_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
