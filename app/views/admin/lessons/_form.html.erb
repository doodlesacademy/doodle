    <%= f.label :worktime_focus %>
    <%= f.text_field :worktime_focus %>
  </div>

  <div class="field">
    <%= f.label :worktime %>
    <%= f.text_area :worktime, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <div class="field">
    <%= f.label :additional_independent_worktime %>
    <%= f.text_field :additional_independent_worktime %>
  </div>

  <div class="field">
    <%= f.label :additional_group_worktime %>
    <%= f.text_field :additional_group_worktime %>
  </div>

  <div class="field">
    <%= f.label :additional_worktime_focus %>
    <%= f.text_field :additional_worktime_focus %>
  </div>

  <div class="field">
    <%= f.label :additional_worktime_time %>
    <%= f.text_field :additional_worktime_time %>
  </div>

  <div class="field">
    <%= f.label :additional_worktime %>
    <%= f.text_field :additional_worktime %>
  </div>

  <div class="field">
    <%= f.label :clean_up %>
    <%= f.text_area :clean_up, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <div class="field">
    <%= f.label :anticipated_problems %>
    <%= f.text_area :anticipated_problems, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <div class="field">
    <%= f.label :early_finishers %>
    <%= f.text_area :early_finishers, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <% if @lesson.early_finishers == nil || @lesson.early_finishers == "" %>
