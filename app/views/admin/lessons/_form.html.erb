  </div>

  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_area :instructions, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <div class="field">
    <%= f.label :check_for_understanding %>
    <%= f.text_area :check_for_understanding, 'data-uk-htmleditor' => '{markdown:true}' %>
  </div>

  <div class="field">
    <%= f.label :independent_worktime %>
    <%= f.text_field :independent_worktime %>
  </div>

  <div class="field">
    <%= f.label :group_worktime %>
    <%= f.text_field :group_worktime %>
  </div>

  <div class="field">
    <%= f.label :worktime_time %>
    <%= f.text_field :worktime_time %>
  </div>

