<%= link_to 'Edit', edit_admin_member_path(@member) %> |
<%= link_to 'Back', admin_members_path %>

<%= render "shared/alert", alert: notice %>

<h3>Member</h3>
<h4>Photo</h4>
<%= image_tag @member.avatar.url(:thumb), class: "img-rounded" %>
<h4>Baby Picture</h4>
<%= image_tag @member.baby_picture.url(:thumb), class: "img-rounded" %>
<% %w(name position role ).each do |s| %>
  <p><%= "#{s.titleize}: #{@member.send(s.to_sym).try(:titleize)}" %></p>
<% end %>
<p>Linked In Profile: <%= link_to @member.linked_in_profile, @member.linked_in_profile %></p>
<% if @member.personal_website.present? %>
  <p>Website: <%= link_to @member.personal_website, @member.personal_website %></p>
<% end %>
<%= markdown @member.bio %>

