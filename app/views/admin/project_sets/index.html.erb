<%= render "shared/alert", alert: notice %>

<h1 class="inline">Projects</h1>
<%= link_to 'New Project', new_admin_project_set_path, class: "btn btn-blue pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2">Academies</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @project_sets.each do |project_set| %>
      <tr>
        <td><%= project_set.title %></td>
        <td><%= link_to 'Upper Academy', admin_project_path(project_set.upper) %></td>
        <td><%= link_to 'Lower Academy', admin_project_path(project_set.lower) %></td>
        <td><%= link_to 'Show', project_path(project_set.slug) %></td>
        <td><%= link_to 'Edit', edit_admin_project_set_path(project_set) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

