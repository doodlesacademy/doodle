<% content_for(:page_title) { ("#{@project.title}") } %>
<% content_for(:hero_image) { image_tag @project.inspiration_image.url(:large) } %>
<% content_for(:hero_title) { "#{@project.title}".titleize } %>
<% content_for(:hero_subtitle) do
  render "shared/academy_project_links", academy: @academy
end %>
<% content_for(:lesson_links) { render "shared/lesson_links", project: @project } %>

<% if @project.synopsis != nil && @project.synopsis != "" %>
  <%= render "project" %>
<% else %>
  <%= render "markdown_project" %>
<% end %>
