  
  <section id="feedback">
    <%= form_tag("/feedback", method: "post") do %>
      <% if controller_name == 'lessons' %>
        <div>
          <h3>Was this lesson clear?</h3>
          <input type="radio" name="was_lesson_clear" value="yes" />Yes
          <input type="radio" name="was_lesson_clear" value="no" />No
        </div>
        <% if local_assigns[:lesson].present? %>
          <%= hidden_field_tag :lesson_id, lesson.id %>
        <% end %>
        <div class="field">
         <h3>We welcome feedback!</h3>
      <% else %>
        <div class="field">
        <h3>We welcome feedback and suggestions for new features!</h3>
      <% end %>
        <textarea rows="4" name="message" placeholder="Your feedback here..."></textarea>
      </div>
      <div class="actions">
        <input type="submit" value="submit" />
      </div>
    <% end %>
  </section>
