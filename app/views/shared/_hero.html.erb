<% if @homepage %>
<section class="hero hero-homepage">
  <video autoplay loop muted auto class="hero-video">
    <source src="<%= video_path 'doodles.webm' %>" type="video/webm">
    <source src="<%= video_path 'doodles.m4v' %>" type="video/mp4">
    <source src="<%= video_path 'doodles.ogg' %>" type="video/ogg">
  </video>
  <div class="hero-content">
    <%= yield :hero_content %>
  </div>
</section>
<% elsif content_for? :hero_image %>
<section class="hero">
  <%= yield :hero_image %>
  <% if content_for? :hero_content %>
  <div class="hero-content">
    <%= yield :hero_content %>
  </div>
  <% elsif content_for? :hero_title %>
  <div class="hero-title-subtitle">
    <div class="hero-subtitle">
      <%= yield :hero_subtitle %>
    </div>
    <div class="hero-title">
      <%= yield :hero_title %>
    </div>
  </div>
  <% else %>
  <div class="hero-page-title">
    <%= yield :page_title %>
  </div>
  <% end %>
</section>
<% else %>
<div id="no-hero"></div>
<% end %>


