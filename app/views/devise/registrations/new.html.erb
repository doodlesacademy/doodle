<div class='sign-up'>
  <h2>Sign up</h2>

  <% resource.build_profile if resource.profile.nil? %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <%= f.fields_for :profile do |fp| %>

      <div class="field smaller-field">
        <%= fp.label :title %>
        <%= fp.text_field :title, autofocus: true, placeholder: "M." %>
      </div>

      <div class="field">
        <%= fp.label :first_name %>
        <%= fp.text_field :first_name, placeholder: "Chris" %>
      </div>

      <div class="field">
        <%= fp.label :last_name%>
        <%= fp.text_field :last_name, placeholder: "Smith" %>
      </div>

      <div class="field">
        <%= fp.label :school %>
        <%= fp.text_field :school, placeholder: "Your School" %>
      </div>

      <div class="field">
        <%= fp.label :city %>
        <%= fp.text_field :city, placeholder: "Your City" %>
      </div>

      <div class="field smaller-field">
        <%= fp.label :state %>
        <%= fp.select(:state, options_for_select(us_states)) %>
      </div>

      <div class="field">
        <%= fp.label :country %>
        <%= fp.text_field :country, placeholder: "Your Country" %>
      </div>

      <div class="field">
        <%= fp.label :occupation %>
        <%= fp.text_field :occupation, placeholder: "Educator" %>
      </div>

      <div class="field smaller-field">
        <%= fp.label :grades %>
        <%= fp.text_field :grades, placeholder: "K-12" %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Your Email" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
